{
  "manifest_version": 3,
  "name": "Timer/Cronômetro",
  "version": "1.0",
  "description": "Extensão de timer e cronômetro para Chrome",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["notifications"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
